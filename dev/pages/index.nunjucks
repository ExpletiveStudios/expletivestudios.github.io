{% extends "layout.nunjucks" %}

{% set relative_path = '' %}

{% block content %}

{% call content.banner('home') %}
	
	<div class="banner__inner">
		<h1>expletive|<span class="color__red--text">studios</span></h1>
	</div>
	
	<a href="#main" class="button__icon" animate="scroll">
		<i class="button__icon--down-caret"></i>
	</a>

{% endcall %}

<div id="main" class="content content--main">
	<div class="content__container">
		<h2>Welcome to <strong>Expletive Studios</strong>!</h2>
		<p>We're a small indie game studio that started with a couple of high school friends and a crazy idea.</p>
		<p>That was more than 6 years ago. Now we are currently alpha testing our first game!</p>
		<a href="team" class="button">Find Out More</a>
	</div>
</div>

{% call content.panel() %}
<div class="panel__content">
	<a href="/games/eidetus" class="panel__link">
		<h2><strong>Eidetus</strong></h2>
		<p>An objective-based multiplayer game where heroes are assembled with reality shaping abilities to overwhelm the enemy team.</p>
		<p><b>Coming Soon!</b></p>
	</a>
</div>

<div class="panel__content">
	<a class="panel__content--video" target="_blank" href="https://www.youtube.com/watch?v=_Eb_MkswCsg">
		<img src="{{ relative_path }}../app/img/eidetus-screenshot-09.jpg">
		<span class="panel__content--video-overlay">Pre-Alpha Gameplay</span>
	</a>
</div>
{% endcall %}

<div class="cards">
	{% call content.card() %}
	<h3>Blog post coming soon!</h3>
	<p>Be sure to check back often to see progress on the game!</p>
	{% endcall %}

	{% call content.card() %}
	<h3>Blog post coming soon!</h3>
	<p>Be sure to check back often to see progress on the game!</p>
	{% endcall %}

	{% call content.card() %}
	<h3>Blog post coming soon!</h3>
	<p>Be sure to check back often to see progress on the game!</p>
	{% endcall %}
</div>

<div id="newsletter" class="content content--alt">
	<div class="content__container">
		<h2>Ready to <b>follow us</b>?</h2>
		<p>Enter your email address below to sign up for our newsletter!</p>

		<!-- Begin MailChimp Signup Form -->
		<div id="mc_embed_signup">
			<form action="//expletivestudios.us15.list-manage.com/subscribe/post?u=2e07229fedd317f43de1a7336&amp;id=9132aaa9b3" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
			    <div id="mc_embed_signup_scroll">
				<input type="email" value="" name="EMAIL" class="email" id="mce-EMAIL" placeholder="email address" required size="35">
			    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
			    <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_2e07229fedd317f43de1a7336_9132aaa9b3" tabindex="-1" value=""></div>&nbsp;&nbsp;&nbsp;<input type="submit" value="Sign me up!" name="subscribe" id="mc-embedded-subscribe" class="button button--attention">
			    </div>
			</form>
		</div>
		<!-- End MailChimp Signup Form -->
	</div>
</div>

{% endblock %}