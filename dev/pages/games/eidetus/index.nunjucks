{% extends "layout.nunjucks" %}

{% set relative_path = '../../' %}

{% block content %}

{% call content.banner('eidetus') %}
	
	<a href="#main" class="button__icon" animate="scroll">
		<i class="button__icon--down-caret"></i>
	</a>

{% endcall %}

{% call content.panel('main') %}

<div class="panel__content">
	<h2><strong>Eidetus</strong></h2>
	<p>An objective-based multiplayer game where heroes are assembled with reality shaping abilities to overwhelm the enemy team.</p>
	<p><b>Coming Soon!</b></p>
</div>

<div class="panel__content">
	<a class="panel__content--video" target="_blank" href="https://www.youtube.com/watch?v=_Eb_MkswCsg">
		<img src="{{ relative_path }}../app/img/eidetus-screenshot-09.jpg">
		<span class="panel__content--video-overlay">Pre-Alpha Gameplay</span>
	</a>
</div>

{% endcall %}

<div class="color__jet--bg">
	<div class="thumbs">
		{{ content.thumb(relative_path + '../app/img/eidetus-screenshot-01.jpg', true) }}
		{{ content.thumb(relative_path + '../app/img/eidetus-screenshot-02.jpg', true) }}
		{{ content.thumb(relative_path + '../app/img/eidetus-screenshot-03.jpg', true) }}
		{{ content.thumb(relative_path + '../app/img/eidetus-screenshot-04.jpg', true) }}
		{{ content.thumb(relative_path + '../app/img/eidetus-screenshot-05.jpg', true) }}
		{{ content.thumb(relative_path + '../app/img/eidetus-screenshot-06.jpg', true) }}
		{{ content.thumb(relative_path + '../app/img/eidetus-screenshot-07.jpg', true) }}
		{{ content.thumb(relative_path + '../app/img/eidetus-screenshot-08.jpg', true) }}
	</div>
</div>

{% endblock %}
