
{#
Global page footer with social media navigation
@param path - prefix relative path for subpages
#}
{% macro footer(path) %}

<div id="newsletter" class="content content--alt">
	<div class="content__container">
		<h2>Ready to <b>follow us</b>?</h2>
		<p>Enter your email address below to sign up for our newsletter!</p>

		<!-- Begin MailChimp Signup Form -->
		<div id="mc_embed_signup">
			<form action="//expletivestudios.us15.list-manage.com/subscribe/post?u=2e07229fedd317f43de1a7336&amp;id=9132aaa9b3" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
			    <div id="mc_embed_signup_scroll">
				<input type="email" value="" name="EMAIL" class="email" id="mce-EMAIL" placeholder="email address" required size="35">
			    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
			    <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_2e07229fedd317f43de1a7336_9132aaa9b3" tabindex="-1" value=""></div>&nbsp;&nbsp;&nbsp;<input type="submit" value="Sign me up!" name="subscribe" id="mc-embedded-subscribe" class="button button--attention">
			    </div>
			</form>
		</div>
		<!-- End MailChimp Signup Form -->
	</div>
</div>

<div id="footer" class="footer">
	<ul class="buttons">
		<li><a class="footer__social-link" target="_blank" href="http://www.facebook.com/expletivestudios"><img src="{{ path }}app/img/facebook-red.png"></a></li>
		<li><a class="footer__social-link" target="_blank" href="http://www.instagram.com/expletivestudios"><img src="{{ path }}app/img/insta-red.png"></a></li>
		<li><a class="footer__social-link" target="_blank" href="http://www.twitter.com/ExpletiveStudio"><img src="{{ path }}app/img/twitter-red.png"></a></li>
		<li><a class="footer__social-link" target="_blank" href="http://www.youtube.com/channel/UC30ur-pGzTcl0BlK3KPBRPw"><img src="{{ path }}app/img/youtube-red.png"></a></li>
	</ul>
	<div>
		<span>Copyright Â© Expletive Studios. All rights reserved.</span>
	</div>
</div>

{% endmacro %}
