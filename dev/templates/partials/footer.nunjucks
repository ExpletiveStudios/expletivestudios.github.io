
{#
Global page footer with social media navigation
@param relative_path - prefix path to assets folder for subpages
#}
{% macro footer(relative_path) %}

	<footer id="footer">
		<footer>
			<ul class="buttons">
				<li><a target="_blank" href="http://www.facebook.com/expletivestudios"><img src="{{ relative_path }}app/img/facebook-red.png"></a></li>
				<li><a target="_blank" href="http://www.instagram.com/expletivestudios"><img src="{{ relative_path }}app/img/insta-red.png"></a></li>
				<li><a target="_blank" href="http://www.twitter.com/ExpletiveStudio"><img src="{{ relative_path }}app/img/twitter-red.png"></a></li>
				<li><a target="_blank" href="http://www.youtube.com/channel/UC30ur-pGzTcl0BlK3KPBRPw"><img src="{{ relative_path }}app/img/youtube-red.png"></a></li>
			</ul>
		</footer>
	</footer>

{% endmacro %}
